<?xml version="1.0" encoding="utf-8"?>
<project name="mod_wow_armory_guild_news" basedir="." default="build">
	
	<exec command="git rev-list --count HEAD" dir="." outputProperty="revision" />
	
	<property name="path" value="/var/www/_deployment/" />
	
	<property name="zip" value="${path}${phing.project.name}.rev.${revision}.zip" />

	<fileset dir="." id="allfiles">
		<include name="**" />
		<exclude name="build.xml" />
		<exclude name=".**"/>
	</fileset>
	
	<fileset dir="_tmp" id="tmp">
		<include name="**" />
	</fileset>
	
	<target name="cleanup">
		<delete dir="_tmp" />
		<delete file="${zip}" />
	</target>
	
	<target name="lang">
		<copy file="./lang/de-DE.${phing.project.name}.ini" tofile="../../language/de-DE/de-DE.${phing.project.name}.ini" overwrite="true" />
		<copy file="./lang/en-GB.${phing.project.name}.ini" tofile="../../language/en-GB/en-GB.${phing.project.name}.ini" overwrite="true" />
	</target>
	
	<target name="build" depends="cleanup,lang">
		
		<copy todir="_tmp">
			<fileset refid="allfiles" />
			<filterchain>
				<replacetokens>
					<token key="REVISION" value="rev ${revision}" />
				</replacetokens>
			</filterchain>
		</copy>
		
		<zip destfile="${zip}">
			<fileset refid="tmp" />
		</zip>
		
		<delete dir="_tmp" />

	</target>
	
</project>